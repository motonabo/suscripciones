import React, { useState, useEffect } from 'react';
import { Calendar, Bell, Trash2, Plus, Settings, Send, Edit3 } from 'lucide-react';

export default function SubscriptionManager() {
  const [subscriptions, setSubscriptions] = useState([]);
  const [telegramToken, setTelegramToken] = useState('');
  const [telegramChatId, setTelegramChatId] = useState('');
  const [showAddForm, setShowAddForm] = useState(false);
  const [showSettings, setShowSettings] = useState(false);
  const [notification, setNotification] = useState('');
  const [editingNote, setEditingNote] = useState(null);
  const [tempNote, setTempNote] = useState('');

  const [newSub, setNewSub] = useState({
    name: '',
    price: '',
    frequency: 'mensual',
    startDate: new Date().toISOString().split('T')[0],
    daysBeforeAlert: 3,
    note: ''
  });

  // Cargar datos del almacenamiento
  useEffect(() => {
    const loadData = async () => {
      try {
        const configResult = await window.storage.get('telegram-config');
        if (configResult) {
          const config = JSON.parse(configResult.value);
          setTelegramToken(config.token || '');
          setTelegramChatId(config.chatId || '');
        }
      } catch (error) {
        console.log('No hay configuraci√≥n previa');
      }

      try {
        const subsResult = await window.storage.get('subscriptions');
        if (subsResult) {
          setSubscriptions(JSON.parse(subsResult.value));
        }
      } catch (error) {
        console.log('No hay suscripciones previas');
      }
    };
    loadData();
  }, []);

  // Guardar configuraci√≥n de Telegram
  const saveConfig = async () => {
    if (!telegramToken || !telegramChatId) {
      showNotification('Por favor completa todos los campos');
      return;
    }

    try {
      await window.storage.set('telegram-config', JSON.stringify({
        token: telegramToken,
        chatId: telegramChatId
      }));
      showNotification('‚úì Configuraci√≥n guardada');
      setShowSettings(false);
    } catch (error) {
      showNotification('Error al guardar configuraci√≥n');
    }
  };

  // Calcular pr√≥xima fecha de pago
  const calculateNextDate = (startDate, frequency) => {
    const date = new Date(startDate);
    const today = new Date();
    
    const monthsMap = {
      'mensual': 1,
      'trimestral': 3,
      'cuatrimestral': 4,
      'anual': 12
    };

    const months = monthsMap[frequency];
    
    while (date < today) {
      date.setMonth(date.getMonth() + months);
    }
    
    return date;
  };

  // A√±adir suscripci√≥n
  const addSubscription = async () => {
    if (!newSub.name || !newSub.price) {
      showNotification('Completa el nombre y el precio');
      return;
    }

    const subscription = {
      id: Date.now(),
      ...newSub,
      price: parseFloat(newSub.price),
      nextDate: calculateNextDate(newSub.startDate, newSub.frequency).toISOString().split('T')[0]
    };

    const updatedSubs = [...subscriptions, subscription];
    setSubscriptions(updatedSubs);
    
    try {
      await window.storage.set('subscriptions', JSON.stringify(updatedSubs));
      showNotification('‚úì Suscripci√≥n a√±adida');
      setShowAddForm(false);
      setNewSub({
        name: '',
        price: '',
        frequency: 'mensual',
        startDate: new Date().toISOString().split('T')[0],
        daysBeforeAlert: 3,
        note: ''
      });
    } catch (error) {
      showNotification('Error al guardar');
    }
  };

  // Actualizar nota
  const updateNote = async (id, note) => {
    const updatedSubs = subscriptions.map(sub => 
      sub.id === id ? {...sub, note} : sub
    );
    setSubscriptions(updatedSubs);
    
    try {
      await window.storage.set('subscriptions', JSON.stringify(updatedSubs));
      showNotification('‚úì Nota actualizada');
      setEditingNote(null);
      setTempNote('');
    } catch (error) {
      showNotification('Error al actualizar la nota');
    }
  };

  // Eliminar suscripci√≥n
  const deleteSubscription = async (id) => {
    if (!confirm('¬øEliminar esta suscripci√≥n?')) return;
    
    const updatedSubs = subscriptions.filter(sub => sub.id !== id);
    setSubscriptions(updatedSubs);
    
    try {
      await window.storage.set('subscriptions', JSON.stringify(updatedSubs));
      showNotification('‚úì Suscripci√≥n eliminada');
    } catch (error) {
      showNotification('Error al eliminar');
    }
  };

  // Enviar notificaci√≥n de prueba a Telegram
  const sendTestNotification = async () => {
    if (!telegramToken || !telegramChatId) {
      showNotification('Configura primero tu bot de Telegram');
      return;
    }

    const message = `üîî *Prueba de Notificaci√≥n*\n\nTu gestor de suscripciones est√° configurado correctamente.`;
    
    try {
      const response = await fetch(`https://api.telegram.org/bot${telegramToken}/sendMessage`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          chat_id: telegramChatId,
          text: message,
          parse_mode: 'Markdown'
        })
      });

      const data = await response.json();
      
      if (data.ok) {
        showNotification('‚úì Mensaje de prueba enviado');
      } else {
        showNotification('Error: ' + (data.description || 'Verifica tu token e ID'));
      }
    } catch (error) {
      showNotification('Error de conexi√≥n');
    }
  };

  // Verificar y enviar alertas
  const checkAndSendAlerts = async () => {
    if (!telegramToken || !telegramChatId) {
      showNotification('Configura primero tu bot de Telegram');
      return;
    }

    const today = new Date();
    let alertsSent = 0;
    
    for (const sub of subscriptions) {
      const nextDate = new Date(sub.nextDate);
      const diffTime = nextDate - today;
      const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

      if (diffDays <= sub.daysBeforeAlert && diffDays >= 0) {
        const message = `‚ö†Ô∏è *Recordatorio de Suscripci√≥n*\n\n` +
          `üìå ${sub.name}\n` +
          `üí∞ Precio: ${sub.price}‚Ç¨\n` +
          `üìÖ Vence: ${nextDate.toLocaleDateString('es-ES')}\n` +
          `‚è∞ Faltan ${diffDays} d√≠as` +
          (sub.note ? `\n\nüìù Nota: ${sub.note}` : '');

        try {
          await fetch(`https://api.telegram.org/bot${telegramToken}/sendMessage`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              chat_id: telegramChatId,
              text: message,
              parse_mode: 'Markdown'
            })
          });
          alertsSent++;
        } catch (error) {
          console.error('Error enviando alerta:', error);
        }
      }
    }

    showNotification(
      alertsSent > 0 
        ? `‚úì Se enviaron ${alertsSent} alerta(s) a Telegram`
        : 'No hay suscripciones pr√≥ximas a vencer'
    );
  };

  // Calcular d√≠as restantes
  const getDaysRemaining = (nextDate) => {
    const today = new Date();
    const next = new Date(nextDate);
    const diffTime = next - today;
    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
    return diffDays;
  };

  // Mostrar notificaci√≥n temporal
  const showNotification = (message) => {
    setNotification(message);
    setTimeout(() => setNotification(''), 3000);
  };

  // Calcular total mensual estimado
  const calculateMonthlyTotal = () => {
    return subscriptions.reduce((total, sub) => {
      const monthlyMap = {
        'mensual': 1,
        'trimestral': 3,
        'cuatrimestral': 4,
        'anual': 12
      };
      return total + (sub.price / monthlyMap[sub.frequency]);
    }, 0);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
      <div className="max-w-4xl mx-auto">
        {/* Header */}
        <div className="bg-white rounded-2xl shadow-xl p-6 mb-6">
          <div className="flex justify-between items-center mb-4">
            <div>
              <h1 className="text-3xl font-bold text-gray-800 flex items-center gap-2">
                <Calendar className="text-indigo-600" />
                Mis Suscripciones
              </h1>
              <p className="text-gray-600 mt-1">Gestiona tus pagos recurrentes</p>
            </div>
            <button
              onClick={() => setShowSettings(!showSettings)}
              className="p-3 bg-gray-100 hover:bg-gray-200 rounded-full transition"
            >
              <Settings className="text-gray-700" />
            </button>
          </div>

          {/* Resumen */}
          <div className="grid grid-cols-2 gap-4 mt-4">
            <div className="bg-indigo-50 p-4 rounded-xl">
              <p className="text-sm text-indigo-600 font-medium">Total Suscripciones</p>
              <p className="text-2xl font-bold text-indigo-700">{subscriptions.length}</p>
            </div>
            <div className="bg-green-50 p-4 rounded-xl">
              <p className="text-sm text-green-600 font-medium">Gasto Mensual Aprox.</p>
              <p className="text-2xl font-bold text-green-700">{calculateMonthlyTotal().toFixed(2)}‚Ç¨</p>
            </div>
          </div>
        </div>

        {/* Notificaci√≥n */}
        {notification && (
          <div className="bg-indigo-600 text-white px-6 py-3 rounded-xl mb-6 shadow-lg animate-fade-in">
            {notification}
          </div>
        )}

        {/* Configuraci√≥n de Telegram */}
        {showSettings && (
          <div className="bg-white rounded-2xl shadow-xl p-6 mb-6">
            <h2 className="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
              <Bell className="text-indigo-600" />
              Configuraci√≥n de Telegram
            </h2>
            
            <div className="space-y-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Token del Bot
                </label>
                <input
                  type="text"
                  value={telegramToken}
                  onChange={(e) => setTelegramToken(e.target.value)}
                  placeholder="123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11"
                  className="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  ID del Chat
                </label>
                <input
                  type="text"
                  value={telegramChatId}
                  onChange={(e) => setTelegramChatId(e.target.value)}
                  placeholder="123456789"
                  className="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                />
              </div>

              <div className="flex gap-3">
                <button
                  onClick={saveConfig}
                  className="flex-1 bg-indigo-600 text-white py-3 px-6 rounded-xl hover:bg-indigo-700 transition font-medium"
                >
                  Guardar Configuraci√≥n
                </button>
                <button
                  onClick={sendTestNotification}
                  className="flex items-center gap-2 bg-green-600 text-white py-3 px-6 rounded-xl hover:bg-green-700 transition font-medium"
                >
                  <Send size={18} />
                  Probar
                </button>
              </div>

              <div className="bg-blue-50 p-4 rounded-xl text-sm text-blue-800">
                <p className="font-medium mb-2">‚ÑπÔ∏è C√≥mo obtener estos datos:</p>
                <ol className="list-decimal list-inside space-y-1 ml-2">
                  <li>Habla con @BotFather en Telegram y crea un bot</li>
                  <li>Copia el token que te da</li>
                  <li>Habla con @userinfobot para obtener tu Chat ID</li>
                </ol>
              </div>
            </div>
          </div>
        )}

        {/* Bot√≥n a√±adir suscripci√≥n */}
        <button
          onClick={() => setShowAddForm(!showAddForm)}
          className="w-full bg-indigo-600 text-white py-4 px-6 rounded-2xl hover:bg-indigo-700 transition font-medium mb-6 flex items-center justify-center gap-2 shadow-lg"
        >
          <Plus size={24} />
          A√±adir Nueva Suscripci√≥n
        </button>

        {/* Formulario de nueva suscripci√≥n */}
        {showAddForm && (
          <div className="bg-white rounded-2xl shadow-xl p-6 mb-6">
            <h2 className="text-xl font-bold text-gray-800 mb-4">Nueva Suscripci√≥n</h2>
            
            <div className="space-y-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Nombre del Servicio
                </label>
                <input
                  type="text"
                  value={newSub.name}
                  onChange={(e) => setNewSub({...newSub, name: e.target.value})}
                  placeholder="Netflix, Spotify, Gym..."
                  className="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Precio (‚Ç¨)
                </label>
                <input
                  type="number"
                  step="0.01"
                  value={newSub.price}
                  onChange={(e) => setNewSub({...newSub, price: e.target.value})}
                  placeholder="9.99"
                  className="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Frecuencia de Pago
                </label>
                <select
                  value={newSub.frequency}
                  onChange={(e) => setNewSub({...newSub, frequency: e.target.value})}
                  className="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                >
                  <option value="mensual">Mensual</option>
                  <option value="trimestral">Trimestral</option>
                  <option value="cuatrimestral">Cuatrimestral</option>
                  <option value="anual">Anual</option>
                </select>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Fecha de Inicio
                </label>
                <input
                  type="date"
                  value={newSub.startDate}
                  onChange={(e) => setNewSub({...newSub, startDate: e.target.value})}
                  className="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Avisar con antelaci√≥n (d√≠as)
                </label>
                <input
                  type="number"
                  value={newSub.daysBeforeAlert}
                  onChange={(e) => setNewSub({...newSub, daysBeforeAlert: parseInt(e.target.value)})}
                  min="1"
                  max="30"
                  className="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Nota (opcional)
                </label>
                <textarea
                  value={newSub.note}
                  onChange={(e) => setNewSub({...newSub, note: e.target.value})}
                  placeholder="Cuenta familiar, incluye HBO, m√©todo de pago..."
                  rows="3"
                  className="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none"
                />
              </div>

              <div className="flex gap-3">
                <button
                  onClick={addSubscription}
                  className="flex-1 bg-indigo-600 text-white py-3 px-6 rounded-xl hover:bg-indigo-700 transition font-medium"
                >
                  Guardar Suscripci√≥n
                </button>
                <button
                  onClick={() => setShowAddForm(false)}
                  className="px-6 py-3 border border-gray-300 rounded-xl hover:bg-gray-50 transition font-medium"
                >
                  Cancelar
                </button>
              </div>
            </div>
          </div>
        )}

        {/* Lista de suscripciones */}
        <div className="space-y-4">
          {subscriptions.length === 0 ? (
            <div className="bg-white rounded-2xl shadow-xl p-12 text-center">
              <Calendar className="mx-auto text-gray-400 mb-4" size={64} />
              <h3 className="text-xl font-medium text-gray-600 mb-2">
                No hay suscripciones
              </h3>
              <p className="text-gray-500">
                A√±ade tu primera suscripci√≥n para empezar a gestionar tus pagos
              </p>
            </div>
          ) : (
            subscriptions.map((sub) => {
              const daysRemaining = getDaysRemaining(sub.nextDate);
              const isUrgent = daysRemaining <= sub.daysBeforeAlert;
              
              return (
                <div
                  key={sub.id}
                  className={`bg-white rounded-2xl shadow-xl p-6 transition ${
                    isUrgent ? 'ring-2 ring-red-500' : ''
                  }`}
                >
                  <div className="flex justify-between items-start mb-3">
                    <div className="flex-1">
                      <h3 className="text-xl font-bold text-gray-800">{sub.name}</h3>
                      <p className="text-gray-600 capitalize mt-1">
                        Pago {sub.frequency}
                      </p>
                    </div>
                    <button
                      onClick={() => deleteSubscription(sub.id)}
                      className="p-2 text-red-500 hover:bg-red-50 rounded-lg transition"
                    >
                      <Trash2 size={20} />
                    </button>
                  </div>

                  <div className="grid grid-cols-2 gap-4">
                    <div className="bg-gray-50 p-3 rounded-xl">
                      <p className="text-sm text-gray-600">Precio</p>
                      <p className="text-xl font-bold text-gray-800">{sub.price}‚Ç¨</p>
                    </div>
                    <div className={`p-3 rounded-xl ${isUrgent ? 'bg-red-50' : 'bg-blue-50'}`}>
                      <p className="text-sm text-gray-600">Pr√≥ximo pago</p>
                      <p className={`text-xl font-bold ${isUrgent ? 'text-red-700' : 'text-blue-700'}`}>
                        {daysRemaining} d√≠as
                      </p>
                    </div>
                  </div>

                  <div className="mt-3 text-sm text-gray-600">
                    üìÖ Fecha: {new Date(sub.nextDate).toLocaleDateString('es-ES')}
                  </div>

                  {/* Secci√≥n de Notas */}
                  {editingNote === sub.id ? (
                    <div className="mt-4 space-y-2">
                      <textarea
                        value={tempNote}
                        onChange={(e) => setTempNote(e.target.value)}
                        placeholder="Escribe una nota..."
                        rows="3"
                        autoFocus
                        className="w-full p-3 border border-indigo-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none"
                      />
                      <div className="flex gap-2">
                        <button
                          onClick={() => updateNote(sub.id, tempNote)}
                          className="flex-1 bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 transition text-sm font-medium"
                        >
                          Guardar Nota
                        </button>
                        <button
                          onClick={() => {
                            setEditingNote(null);
                            setTempNote('');
                          }}
                          className="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition text-sm font-medium"
                        >
                          Cancelar
                        </button>
                      </div>
                    </div>
                  ) : sub.note ? (
                    <div
                      onClick={() => {
                        setEditingNote(sub.id);
                        setTempNote(sub.note);
                      }}
                      className="mt-4 bg-yellow-50 border border-yellow-200 p-3 rounded-xl cursor-pointer hover:bg-yellow-100 transition"
                    >
                      <div className="flex items-start justify-between">
                        <div className="flex-1">
                          <p className="text-xs text-yellow-700 font-semibold mb-1 flex items-center gap-1">
                            üìù NOTA
                          </p>
                          <p className="text-sm text-yellow-900">{sub.note}</p>
                        </div>
                        <Edit3 size={16} className="text-yellow-600 flex-shrink-0 ml-2" />
                      </div>
                    </div>
                  ) : (
                    <button
                      onClick={() => {
                        setEditingNote(sub.id);
                        setTempNote('');
                      }}
                      className="mt-4 w-full py-2 border-2 border-dashed border-gray-300 rounded-xl text-gray-500 hover:border-indigo-400 hover:text-indigo-600 transition text-sm font-medium"
                    >
                      + A√±adir Nota
                    </button>
                  )}

                  {isUrgent && (
                    <div className="mt-3 bg-red-100 text-red-800 px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2">
                      <Bell size={16} />
                      ¬°Pr√≥ximo a vencer!
                    </div>
                  )}
                </div>
              );
            })
          )}
        </div>

        {/* Bot√≥n para verificar alertas */}
        {subscriptions.length > 0 && (
          <button
            onClick={checkAndSendAlerts}
            className="w-full mt-6 bg-green-600 text-white py-4 px-6 rounded-2xl hover:bg-green-700 transition font-medium flex items-center justify-center gap-2 shadow-lg"
          >
            <Bell size={20} />
            Verificar y Enviar Alertas Ahora
          </button>
        )}
      </div>
    </div>
  );
}
